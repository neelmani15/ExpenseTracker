<%- include('partials/header') %>
<header class="p-3 text-bg-dark">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/expense" class="d-flex align-items-center mb-2 mb-lg-0 text-white heading text-decoration-none">
        Expenses Tracker
        <!-- <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg> -->
      </a>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <!-- <li><a href="#" class="nav-link px-2 text-secondary">Home</a></li> -->
        <li><a href="/viewexpense" class="nav-link px-2 addexpense text-white">View Expenses</a></li>
        <!-- <li><a href="#" class="nav-link px-2 text-white">View Expenses</a></li> -->
      </ul>
      <div class="text-end">
        <!-- <a role="button" href="/login" class="btn btn-outline-light me-2">Login</a> -->
        <a role="button" href="/logout" class="btn btn-warning">Logout</a>
      </div>
    </div>
  </div>
</header>
<div class="container2">
  <div class="centered">
    <i class="fa fa-hourglass-2 fa-6x"></i>
    <h1 class="display-3">Add new Expenses</h1>
  </div>
    <div class="card card5">
      <diV class="card-body">
        <% if (message && message.length > 0) { %>
          <div class="error">
            <% message.forEach(function(msg) { %>
              <p><%= msg %></p>
            <% }) %>
          </div>
        <% } %>
        <form action="/submit" method="POST">

        <div class="form-group m-1">
          <label for="title" class="label1">Title</label>
          <input type="text" class="form-control" name="title" placeholder="Title">
        </div>
        <div class="form-group">
          <label for="category" class="label1">Category</label>
          <select class="form-control" id="category" name="category">
            <option value="">Choose ...</option>
            <option value="Housing">Housing</option>
            <option value="Utilities">Utilities</option>
            <option value="Transportation">Transportation</option>
            <option value="Groceries">Groceries</option>
            <option value="Food">Food</option>
            <option value="Entertainment">Entertainment</option>
            <option value="Education">Education</option>
            <option value="Others">Others</option>
          </select>
        </div>
        <div class="form-group">
          <label for="amount" class="label1">Amount</label>
          <input type="number" class="form-control" name="amount" placeholder="Amount">
        </div>
        <div class="button">
          <button type="submit" class="btn btn-success mt-4">Add Expense</button>
        </div>
        </form>
    </diV>

  </div>
</div>
<%- include('partials/footer') %>
